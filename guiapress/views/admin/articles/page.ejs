<%- include('../../partials/head.ejs') %>
    <%- include('../../partials/homenavbar.ejs') %>
        <div class="container">
            <% result.articles.rows.forEach(articles=> { %>
                <br>
                <div class="card">
                    <div class="card-header bg-primary" style="color:white;">
                        <h2>
                            <%= articles.title %>
                        </h2>
                    </div>
                    <div class="card-body">
                        <a href="/<%= articles.slug %>" class="btn btn-primary">Ler artigo</a>
                    </div>
                </div>
                <% }) %>
                    <div class="row">
                        <div class="col col-12">
                            <br>
                            <%if(result.page > 2){%>
                                <a href="/articles/page/<%=result.page - 1%>"> &lt;&lt;Anterior </a>
                                <%}else if(result.page == 2){%>
                                    <a href="/"> &lt;&lt;Anterior </a>
                                <%}%>
                            <%if(result.next){%>
                                <a href="/articles/page/<%=result.page + 1%>" class="float-right">Proximo &gt;&gt;</a>
                                <%}%>
                        </div>
                    </div>
                    <hr>
        </div>
        <%- include('../../partials/footer.ejs') %>